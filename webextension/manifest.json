{
  "manifest_version": 2,
  "name": "Cool Maze",
  "version": "1.0",

  "description": "Share from mobile to browser.",
  "homepage_url": "https://coolmaze.io",

  "icons": {
    "48": "resources/icons/coolmaze_48.png"
  },


  "browser_action": {
    "browser_style": true,
    "default_icon": "resources/icons/coolmaze_48.png",
    "default_title": "Receive with Cool-Maze",
    "default_popup": "resources/receive-box.html"
  },

  "content_security_policy": "script-src 'self' https://*.pusher.com; object-src 'self'"
}